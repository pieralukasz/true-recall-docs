---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="True Recall - AI-powered flashcard generation and spaced repetition for Obsidian" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title} | True Recall</title>
		<link rel="stylesheet" href="/styles/app.css" />
	</head>
	<body>
		<nav class="app-nav">
			<a href="/" class="logo">
				<img src="/favicon.svg" alt="" width="24" height="24" />
				<span>True Recall</span>
			</a>
			<div class="nav-links">
				<a href="/">Docs</a>
				<a href="/pricing">Pricing</a>
				<a href="/dashboard">Dashboard</a>
			</div>
		</nav>

		<main class="app-main">
			<slot />
		</main>

		<footer class="app-footer">
			<p>&copy; 2024 True Recall. All rights reserved.</p>
		</footer>
	</body>
</html>
